@model TestUngDung.Areas.Admin.Models.LoginModel
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Đăng nhập trang quản trị</title>

	<!-- ========== COMMON STYLES ========== -->
	<link rel="stylesheet" href="~/Assets/Admin/css/bootstrap.min.css" media="screen">
	<link rel="stylesheet" href="~/Assets/Admin/css/font-awesome.min.css" media="screen">
	<link rel="stylesheet" href="~/Assets/Admin/css/animate-css/animate.min.css" media="screen">

	<!-- ========== PAGE STYLES ========== -->
	<link rel="stylesheet" href="~/Assets/Admin/css/icheck/skins/flat/blue.css">

	<!-- ========== THEME CSS ========== -->
	<link rel="stylesheet" href="~/Assets/Admin/css/main.css" media="screen">

	<!-- ========== MODERNIZR ========== -->
	<script src="~/Assets/Admin/js/modernizr/modernizr.min.js"></script>
</head>

<body class="bg-gradient-primary">
	<div class="main-wrapper">

		<div class="login-bg-color bg-black-300">
			<div class="row">
				<div class="col-md-4 col-md-offset-4">
					<div class="panel login-box">
						<div class="panel-heading">
							<div class="panel-title text-center">
								<h4>Đăng nhập trang quản trị</h4>
							</div>
						</div>
						<div class="panel-body p-20">
							@using (Html.BeginForm("Index", "Login", FormMethod.Post))
							{
								@Html.AntiForgeryToken()
								@Html.ValidationSummary(true, "", new { @class = "text-danger" });
							<div class="form-group">
								<label>Tên đăng nhập</label>
								@Html.TextBoxFor(m => m.UserName, "", new { @type = "text", @class = "form-control form-control-user", @placeholder = "Nhập vào tên đăng nhập" })
								@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
							</div>
							<div class="form-group">
								<label>Mật khẩu</label>
								@Html.TextBoxFor(m => m.Password, "", new { @type = "password", @class = "form-control form-control-user", @placeholder = "Nhập vào mật khẩu" })
								@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
							</div>
								<div class="form-group mt-20">
									<div class="">
										<button type="submit" class="btn btn-success btn-labeled pull-right">Đăng Nhập<span class="btn-label btn-label-right"><i class="fa fa-check"></i></span></button>
										<div class="clearfix"></div>
									</div>
								</div>
							}
							<hr>
							@Html.Partial("_Notifications")
						</div>
					</div>
					<!-- /.panel -->
					<p class="text-muted text-center"><small>Nguyen Thanhh Dat - 1811505310107</small></p>
				</div>
				<!-- /.col-md-6 col-md-offset-3 -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /. -->

	</div>
	<!-- ========== PAGE JS FILES ========== -->
	<script src="~/Assets/Admin/js/icheck/icheck.min.js"></script>

	<!-- ========== THEME JS ========== -->
	<script src="js/main.js"></script>
	<script>
		$(function () {
			$('input.flat-blue-style').iCheck({
				checkboxClass: 'icheckbox_flat-blue'
			});
		});
	</script>


	<!-- Bootstrap core JavaScript-->
	<script src="~/Assets/Admin/vendor/jquery/jquery.min.js"></script>
	<script src="~/Assets/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

	<!-- Core plugin JavaScript-->
	<script src="~/Assets/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>

	<!-- Custom scripts for all pages-->
	<script src="~/Assets/Admin/js/sb-admin-2.min.js"></script>

</body>

</html>