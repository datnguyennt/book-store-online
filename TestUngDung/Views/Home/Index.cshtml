@{
	ViewBag.Title = "Trang chủ";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var lstProduct = (List<ModelEF.Model.Product>)ViewBag.Product;
}

<!-- aside Widget -->
@{ Html.RenderAction("ProductCategory", "Product");}

<!-- /aside Widget -->
<!-- aside Widget -->
<div class="aside">
	<h3 class="aside-title">Giá</h3>
	<div class="price-filter">
		<div id="price-slider"></div>
		<div class="input-number price-min">
			<input id="price-min" type="number">
			<span class="qty-up">+</span>
			<span class="qty-down">-</span>
		</div>
		<span>-</span>
		<div class="input-number price-max">
			<input id="price-max" type="number">
			<span class="qty-up">+</span>
			<span class="qty-down">-</span>
		</div>
	</div>
</div>
<!-- /aside Widget -->
<!-- aside Widget -->
<div class="aside">
	<h3 class="aside-title">Tác giả</h3>
	<div class="checkbox-filter">
		@foreach (var item in lstProduct)
		{
			<div class="input-checkbox">
				<input type="checkbox" id="brand-1">
				<label for="brand-1">
					<span></span>
					@item.Author
				</label>
			</div>
		}

	</div>
</div>
				</div>
<div id="store" class="col-md-9">
	<div class="store-filter clearfix">
		<div class="store-sort">
			<label>
				Sắp xếp:
				<select class="input-select">
					<option value="0">Hot</option>
					<option value="1">Giá từ cao đến thấp</option>
					<option value="1">Giá từ thấp đến cao</option>
				</select>
			</label>

			<label>
				Hiển thị:
				<select class="input-select">
					<option value="0">20</option>
					<option value="1">50</option>
				</select>
			</label>
		</div>
		<ul class="store-grid">
			<li class="active"><i class="fa fa-th"></i></li>
			<li><a href="#"><i class="fa fa-th-list"></i></a></li>
		</ul>
	</div>

	<div class="row">
		@foreach (var item in lstProduct)
		{
			var url = "/chi-tiet/" + item.Metatitle + "-" + item.ID;
			<div class="col-md-4 col-xs-6">
				<div class="product">
					<div class="product-img">
						<a href="@url"><img src="@item.Image" height="263" width="263" alt="@item.Name"></a>
						<div class="product-label">

						</div>
					</div>
					<div class="product-body">
						<p class="product-category">@item.Category.Name</p>
						<h3 class="product-name"><a href="#">@item.Name</a></h3>
						<h4 class="product-price">@(item.Status == true ? item.UniqueCost.Value.ToString("N0") + " VNĐ" : "Hết hàng")</h4>
						<div class="product-rating">
						</div>
						<div class="product-btns">
							<button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">thêm vào yêu thích</span></button>
							<button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">xem nhanh</span></button>
						</div>
					</div>
					<div class="add-to-cart">
						<button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> @(item.Status == true ? "Thêm vào giỏ hàng": "Liên hệ")</button>
					</div>
				</div>
			</div>
			<div class="clearfix visible-sm visible-xs"></div>
		}
	</div>

	<!-- store bottom filter -->
	<div class="store-filter clearfix">
		<span class="store-qty">Showing 20-100 products</span>
		<ul class="store-pagination">
			<li class="active">1</li>
			<li><a href="#">2</a></li>
			<li><a href="#">3</a></li>
			<li><a href="#">4</a></li>
			<li><a href="#"><i class="fa fa-angle-right"></i></a></li>
		</ul>
	</div>
	<!-- /store bottom filter -->
</div>
