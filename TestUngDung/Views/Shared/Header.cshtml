@model List<ModelEF.Model.Category>
<header>
	<!-- TOP HEADER -->
	<div id="top-header">
		<div class="container">
			<ul class="header-links pull-left">
				<li><a href="#"><i class="fa fa-phone"></i> +843-4497-6831</a></li>
				<li><a href="#"><i class="fa fa-envelope-o"></i> datnguyennguyen.2000@email.com</a></li>
				<li><a href="#"><i class="fa fa-map-marker"></i> 48 Cao Thang</a></li>
			</ul>
			<ul class="header-links pull-right">
				<li><a href="#"><i class="fa fa-dollar"></i> VN</a></li>
				<li><a href="#"><i class="fa fa-user-o"></i> Đăng nhập/Đăng kí</a></li>
			</ul>
		</div>
	</div>
	<!-- /TOP HEADER -->
	<!-- MAIN HEADER -->
	<div id="header">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- LOGO -->
				<div class="col-md-3">
					<div class="header-logo">
						<a href="/home" class="logo">
							<img src="~/Assets/Client/img/icon.png" height="50" width="50" alt="">
						</a>
					</div>
				</div>
				<!-- /LOGO -->
				<!-- SEARCH BAR -->
				<div class="col-md-6">
					<div class="header-search">
						<form>
							<select class="input-select">
								@foreach (var item in Model)
								{
									<option value="0">@item.Name</option>
								}
							</select>
							<input class="input" placeholder="Nhập tên sách vào đây">
							<button class="search-btn">Tìm</button>
						</form>
					</div>
				</div>
				<!-- /SEARCH BAR -->
				<!-- ACCOUNT -->
				<div class="col-md-3 clearfix">
					<div class="header-ctn">
						<!-- Wishlist -->
						<div>
							<a href="#">
								<i class="fa fa-heart-o"></i>
								<span>Yêu thích</span>
								<div class="qty">2</div>
							</a>
						</div>
						<!-- /Wishlist -->
						<!-- Cart -->
						<div class="dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
								<i class="fa fa-shopping-cart"></i>
								<span>Giỏ hàng</span>
								<div class="qty">3</div>
							</a>
							<div class="cart-dropdown">
								<div class="cart-list">
								</div>
								<div class="cart-summary">
									<small>Không có sản phẩm nào</small>
									<h5>Tổng: 0 VNĐ</h5>
								</div>
								<div class="cart-btns">
									<a href="#">Xem giỏ hàng</a>
									<a href="#">Thanh toán  <i class="fa fa-arrow-circle-right"></i></a>
								</div>
							</div>
						</div>
						<!-- /Cart -->
						<!-- Menu Toogle -->
						<div class="menu-toggle">
							<a href="#">
								<i class="fa fa-bars"></i>
								<span>Menu</span>
							</a>
						</div>
						<!-- /Menu Toogle -->
					</div>
				</div>
				<!-- /ACCOUNT -->
			</div>
			<!-- row -->
		</div>
		<!-- container -->
	</div>
	<!-- /MAIN HEADER -->
</header>
