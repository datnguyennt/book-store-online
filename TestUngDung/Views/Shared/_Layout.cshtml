<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

	<title>@ViewBag.Title</title>

	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

	<!-- Bootstrap -->
	<link type="text/css" rel="stylesheet" href="~/Assets/Client/css/bootstrap.min.css" />

	<!-- Slick -->
	<link type="text/css" rel="stylesheet" href="~/Assets/Client/css/slick.css" />
	<link type="text/css" rel="stylesheet" href="~/Assets/Client/css/slick-theme.css" />

	<!-- nouislider -->
	<link type="text/css" rel="stylesheet" href="~/Assets/Client/css/nouislider.min.css" />

	<!-- Font Awesome Icon -->
	<link rel="stylesheet" href="~/Assets/Client/css/font-awesome.min.css">

	<!-- Custom stlylesheet -->
	<link type="text/css" rel="stylesheet" href="~/Assets/Client/css/style.css" />

</head>
<body>
	<!-- HEADER -->
	@{Html.RenderAction("Header", "Home"); }
	<!-- /HEADER -->
	<!-- NAVIGATION -->
	@{Html.RenderAction("MainMenu", "Home"); }
	<!-- /NAVIGATION -->
	<!-- SECTION -->
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- ASIDE -->
				<div id="aside" class="col-md-3">
					@RenderBody()
				</div>
				<!-- /STORE -->
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	<!-- /SECTION -->
	<!-- NEWSLETTER -->
	<div id="newsletter" class="section">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<div class="col-md-12">
					<div class="newsletter">
						<p>Đăng kí để <strong>NHẬN THÔNG TIN MỚI VỀ SÁCH</strong></p>
						<form>
							<input class="input" type="email" placeholder="Nhập vào địa chỉ Email">
							<button class="newsletter-btn"><i class="fa fa-envelope"></i> Đăng kí</button>
						</form>
						<ul class="newsletter-follow">
							<li>
								<a href="#"><i class="fa fa-facebook"></i></a>
							</li>
							<li>
								<a href="#"><i class="fa fa-twitter"></i></a>
							</li>
							<li>
								<a href="#"><i class="fa fa-instagram"></i></a>
							</li>
							<li>
								<a href="#"><i class="fa fa-pinterest"></i></a>
							</li>
						</ul>
					</div>
				</div>
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
	<!-- /NEWSLETTER -->
	<!-- FOOTER -->
	@{Html.RenderAction("Footer", "Home"); }
	<!-- /FOOTER -->
	<!-- jQuery Plugins -->
	<script src="~/Assets/Client/js/jquery.min.js"></script>
	<script src="~/Assets/Client/js/bootstrap.min.js"></script>
	<script src="~/Assets/Client/js/slick.min.js"></script>
	<script src="~/Assets/Client/js/nouislider.min.js"></script>
	<script src="~/Assets/Client/js/jquery.zoom.min.js"></script>
	<script src="~/Assets/Client/js/main.js"></script>

</body>
</html>
